{
  "name": "YouTube Timestamp Comments",
  "version": "0.4.3",
  "manifest_version": 2,
  "description": "An extension that lists timestamp comments at YouTube.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["js/background/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "html/page_action/page_action.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/content_scripts/contentScript.js"]
    }
  ],
  "permissions": [
    "https://www.youtube.com/watch*",
    "declarativeContent",
    "tabs"
  ]
}
